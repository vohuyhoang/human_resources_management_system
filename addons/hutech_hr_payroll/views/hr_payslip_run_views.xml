<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_payslip_run_form_inherit" model="ir.ui.view">
            <field name="name">hr.payslip.run.form.inherit</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='draft_payslip_run']" position="replace">
                    <button string="Set to Draft" name="draft_payslip_run" type="object" states="close"
                            groups="hr_payroll.group_hr_payroll_manager"/>
                </xpath>
                <xpath expr="//button[@name='close_payslip_run']" position="after">
                    <button name="action_payslips_sent" string="Send PaySlips by Email"
                            type="object" attrs="{'invisible':['|', ('state', 'not in', ('close'))]}"
                            class="oe_highlight" groups="hr_payroll.group_hr_payroll_manager"/>
                </xpath>
                <xpath expr="//field[@name='slip_ids']" position="after">
                    <group class="oe_subtotal_footer oe_right">
                        <field name="currency_id" invisible="1"/>
                        <field name="amount_total" class="oe_subtotal_footer_separator" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <field name="amount_total_vi" string="Total amount in words"/>
                </xpath>
                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>